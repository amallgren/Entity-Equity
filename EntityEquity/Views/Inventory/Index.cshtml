@using EntityEquity.Components

@model InventoryIndexModel
<label for="inventories">Inventory</label>
<select id="inventories">
    @foreach(var inventory in Model.Inventories)
    {
        <option value="@inventory.InventoryId">@inventory.Name</option>
    }
</select>
<button type="button" data-bs-toggle="modal" data-bs-target="#addAnInventoryModal">Add An Inventory</button>
@{
}
<component type="typeof(AddAnInventoryModal)" render-mode="ServerPrerendered" param-UserID="@Model.UserId" param-BaseAddress="@Model.BaseAddress" />